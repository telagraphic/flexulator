{
  "name": "flexulator",
  "version": "1.0.0",
  "description": "A visual flexbox space distribution calculator",
  "main": "index.js",
  "scripts": {
    "dev:scss": "node-sass --output-style nested -o css scss/styles.scss",
    "dev:watch": "onchange 'scss' -- npm run dev:scss",
    "dev:serve": "browser-sync start --server --ss './' --files 'scss/**/*.scss, ./*.html, js/*.js'",
    "build:clean": "rm -rf dist",
    "server": "run-p dev:watch dev:serve",
    "build:dist": "mkdir -p dist/{css,js,img,fonts/web}",
    "build:css-comment-remove": "postcss -u postcss-discard-comments -o css/styles.css css/styles.css",
    "build:css-autoprefix": "postcss -u autoprefixer -o dist/css/styles.css css/*.css",
    "build:css-compress": "node-sass --output-style compressed -o dist/css dist/css/*.css",
    "build:css-critical": "node css/critical.js",
    "build:html": "html-minifier index.html -o dist/index.html --collapse-whitespace",
    "build:js-lint": "",
    "build:minify-js": "mkdir -p dist/js && terser js/flexItem.js js/flexulator.js js/app.js -o dist/js/scripts.min.js -c -m",
    "build:img": "imagemin img --out-dir dist/img -p",
    "build:fonts": "cp fonts/web/* dist/fonts/web",
    "build": "run-s build:*"
  },
  "repository": {
    "url": "https://github.com/telagraphic/flexulator"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "https://www.flexulator.com/",
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "browser-sync": "^2.26.7",
    "critical": "^2.0.3",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.0",
    "html-minifier": "^4.0.0",
    "imagemin-cli": "^6.0.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.0.2",
    "postcss-cli": "^7.1.1",
    "postcss-discard-comments": "^4.0.2",
    "terser": "^5.2.1"
  }
}
